.red-bar {
    height: 11px;
    background-color: red;
    position: relative;

    img {
        position: absolute;
        top: 10px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2;
        +below('sm') { 
            width: 180px; 
            right: 10%;
            left: initial;
            transform: initial;
        }
        +below('xxs') { width: 150px; }
    }
}