ul.categories-boxes {
    display: flex;
    list-style: none;
    padding: 0;
    flex-wrap: wrap;
    margin calc(-30px / 2);

    > li.category-box {
        flex-grow: 0;
        flex-shrink: 0;
        flex-basis: calc(100% / 3);
        padding: calc(30px / 2);
        display: flex;
        justify-content: center;
        
        @media (max-width: 1024px) {
            flex-basis: calc(100% / 2);
        }    

        @media (max-width: 768px) {
            flex-basis: calc(100%);
        }

        .content {
            flex-grow: 1;
            background-color: white;
            border-bottom: 4px solid red;
            overflow: hidden;

            display: flex;
            flex-direction: column;
            align-items: center;

            > * { flex-shrink: 0; }
        }

        .category-box-title {
            color: black;
            text-align: center;
        }

        .category-entry-requirement {
            color: red;
            font-size: 12px;
        }
    }
}