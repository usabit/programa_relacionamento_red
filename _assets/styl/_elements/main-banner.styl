.main-banner {
    position: relative;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: right;

    +below('xs') { background-position: right 25% top 0; }

    &:before {
        content: '';
        display: block;
    }

    &:after {
        content: '';
        display: block;
        padding-top: 40.7%;
        background-image: linear-gradient(left, rgba(0,0,0, .7), transparent);

        +at('md') { padding-top: 70%; }
        +at('sm') { padding-top: 90%; }
        +at('xs') { padding-top: 160%; }
        +below('xxs') { padding-top: 205%; }
    }

    .content {
        padding: 0 55px;
        position: absolute;
        top: 0; right: 0; bottom: 0; left: 0;
        color: white;

        display: flex;
        flex-direction: column;
        justify-content: center;

        +below('xs') { 
            // position: initial; 
            padding: 60px 20px 30px;
        }

        h2 {
            font-size: 32px;
            text-transform: uppercase;
            line-height: 1.3;

            +below('xs') {
                font-size: 24px;
            }
        }

        p {
            max-width: 313px;
            font-size: 16px;
        }

        .main-banner-actions {
            display: flex;
            align-items: center;
            +below('xs') {
                flex-direction: column;
                align-items: flex-start;
                span {
                    margin: 20px 0 !important;
                }
            }
        }
    }
}